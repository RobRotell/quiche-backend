generator client {
	provider = "prisma-client-js"
}

datasource db {
	provider = "mysql"
	url      = env( "DB_URL" )
}

model Expense {
	id          Int      	@id @unique @default( autoincrement() )
	year        Int
	month       Int
	date        DateTime
	vendor 		Vendor?		@relation( fields: [ vendorId ], references: [ id ] )
	vendorId    Int?
	description	String
	category    Category? 	@relation( fields: [ categoryId ], references: [ id ] )
	categoryId  Int?
	payType     PayType?  	@relation( fields: [ payTypeId ], references: [ id ] )
	payTypeId   Int?
	amount      Float
}

model Vendor {
	id      	Int			@id @unique @default( autoincrement() )
	name    	String
	Expense 	Expense[]
}

model Category {
	id      	Int			@id @unique @default( autoincrement() )
	name    	String
	Expense 	Expense[]
}

model PayType {
	id      	Int			@id @unique @default( autoincrement() )
	name    	String
	Expense 	Expense[]
}

model Auth {
	id       	Int			@id @unique @default( autoincrement() )
	username 	String
	password 	String
}

